# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=false

# Database Configuration
DATABASE_URL=sqlite:///ecg_app.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/ecgscanner

# Email Configuration (Gmail SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=ECG Scanner <your-email@gmail.com>

# For other email providers:
# MAIL_SERVER=smtp.office365.com (Outlook)
# MAIL_SERVER=smtp.mail.yahoo.com (Yahoo)
# MAIL_SERVER=smtp.zoho.com (Zoho)

# Application Settings
JWT_EXPIRATION_DELTA=30
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Server
PORT=5001
HOST=0.0.0.0
